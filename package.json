{
  "name": "herman.demo",
  "version": "1.0.0",
  "description": "A Demo of Herman's capabilities.",
  "main": "index.html",
  "author": "Chris Wells",
  "license": "AFL-3.0",
  "private": false,
  "dependencies": {
    "browser-sync": "^2.24.5",
    "dart-sass": "^1.7.1",
    "node-sass": "^4.9.0",
    "onchange": "^4.0.0",
    "sassdoc": "^2.5.0",
    "sassdoc-theme-herman": "^3.0.0"
  },
  "scripts": {
    "guide": "sassdoc sass/**/*.scss",
    "build:all": "yarn run build && yarn run guide",
    "watch": "onchange 'sass/**/*.scss' -- yarn build:all",
    "build": "dart-sass sass/style.scss > style.css",
    "bs": "browser-sync start --files=style.css"
  }
}
